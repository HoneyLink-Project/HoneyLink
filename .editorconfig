# HoneyLink EditorConfig
# Unified formatting rules for cross-IDE compatibility
# Supports VS Code, IntelliJ IDEA, Vim, Emacs, Sublime Text, etc.
# https://editorconfig.org/

root = true

# ========== Default for All Files ==========
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
max_line_length = 100

# ========== Rust Files ==========
[*.rs]
indent_style = space
indent_size = 4
max_line_length = 100

# ========== Cargo Configuration Files ==========
[Cargo.{toml,lock}]
indent_style = space
indent_size = 4

# ========== TypeScript/JavaScript/React ==========
[*.{ts,tsx,js,jsx,mjs,cjs}]
indent_style = space
indent_size = 2
max_line_length = 100

# ========== JSON/JSONC Files ==========
[*.{json,jsonc}]
indent_style = space
indent_size = 2

# ========== YAML Files (CI/CD, Docker Compose) ==========
[*.{yml,yaml}]
indent_style = space
indent_size = 2

# ========== TOML Files (Rust config) ==========
[*.toml]
indent_style = space
indent_size = 4

# ========== Markdown Files ==========
[*.md]
indent_style = space
indent_size = 2
trim_trailing_whitespace = false  # Preserve trailing spaces for line breaks
max_line_length = 100

# ========== Shell Scripts ==========
[*.{sh,bash,zsh}]
indent_style = space
indent_size = 2
end_of_line = lf

# ========== PowerShell Scripts ==========
[*.{ps1,psm1,psd1}]
indent_style = space
indent_size = 4
end_of_line = crlf  # PowerShell convention on Windows

# ========== HTML/CSS/SCSS ==========
[*.{html,css,scss,sass}]
indent_style = space
indent_size = 2

# ========== Makefile (requires tabs) ==========
[{Makefile,*.mk}]
indent_style = tab
indent_size = 4

# ========== Git Configuration ==========
[.gitconfig]
indent_style = tab

# ========== GitHub Actions Workflows ==========
[.github/workflows/*.yml]
indent_style = space
indent_size = 2

# ========== Docker Files ==========
[{Dockerfile,*.dockerfile,docker-compose*.yml}]
indent_style = space
indent_size = 2
end_of_line = lf

# ========== License Files ==========
[LICENSE*]
indent_style = space
indent_size = 4
insert_final_newline = false
